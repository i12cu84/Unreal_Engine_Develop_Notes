{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe 生成活动文件",
            "command": "C:/Program File/mingw/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-std=c++20",
                "${file}",
                "-o",
                "${workspaceFolder}/temp/${fileBasenameNoExtension}.exe",
                "-I",
                "C:/Program File/mingw/include",
                "-L",
                "C:/Program File/mingw/lib",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试器生成的任务。"
        }
    ],
    "version": "2.0.0"
}